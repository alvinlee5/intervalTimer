<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#345953" android:endColor="#689a92"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#000000" />
            <solid android:color="#A9A9A9"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#000000" />
            <!--<gradient android:angle="-90" android:startColor="#D3D3D3" android:centerColor="#A9A9A9" android:endColor="#D3D3D3" />-->
            <gradient android:angle="-90" android:startColor="#A9A9A9" android:centerColor="#D3D3D3" android:endColor="#A9A9A9" />
            <!--<gradient android:angle="-90" android:startColor="#D3D3D3"  android:endColor="#A9A9A9" />-->
        </shape>
    </item>
</selector>